<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- NuGet metadata -->
    <PackageId>Sudoq</PackageId>
    <Version>1.0.0</Version>
    <Authors>Lukasz Kulik</Authors>
    <Company>Infertus</Company>
    <Description>A lightweight C# library exposing functions for generating sudoku boards at different levels of difficulty.</Description>
    <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/Boughpohpue/Sudoq</RepositoryUrl>
  </PropertyGroup>

</Project>
